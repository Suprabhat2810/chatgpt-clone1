{
  "version": 2,
  "builds": [
    {
      "src": "run.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python 3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/chat/(.*)",
      "dest": "run.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "run.py"
    },
    {
      "src": "/(.*)",
      "dest": "run.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
